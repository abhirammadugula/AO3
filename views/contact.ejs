      <form name="contact-form" align="center">
          <div id="stuform" >
          <label>First Name<br></label> 
          <input type="text" name="firstName" id="firstName" required/><br><br>
          <label>Last Name:<br></label>
          <input type="text" name="lastName" id="lastName" required/><br><br>
          <label>Email Id:<br></label>
          <input type="email" name="emailId" id="emailId" required/><br><br>
          <label>Phone Number:<br> </label>
          <input type="number" name="phoneNumber" id="phoneNumber" required/><br><br>
          <label>BackGround</label>
          <select name="BackGround" id="background" onchange=changeBackground(this)>
              <option value="white">white</option>
              <option value="blue">blue</option>
              <option value="red">red</option>
              <option value="green">green</option><br>
          </select>
          <button onclick="CallFunction()">Submit</button>
        </form>
